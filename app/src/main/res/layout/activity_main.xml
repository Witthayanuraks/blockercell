<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/darkGray">

    <!-- Judul atau Deskripsi Aplikasi (Opsional) -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Blocker"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <!-- Tombol Set as Default Phone App -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSetDefaultPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Default Phone App"
        android:textAllCaps="true"
        android:backgroundTint="@color/gray"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Tombol View Logs -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Logs"
        android:textAllCaps="true"
        android:backgroundTint="@color/gray"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Tombol About (Opsional, berdasarkan permintaan sebelumnya) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textAllCaps="true"
        android:backgroundTint="@color/gray"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp" />

</LinearLayout>